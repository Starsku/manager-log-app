rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Optimisation : Utiliser les Custom Claims (Recommandé) ou une fonction optimisée.
    // Pour cet exemple, je garde votre logique DB mais je la sécurise.
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/systems/admins/users/$(request.auth.uid));
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Protection des champs sensibles (isPaid, etc.)
    function isNotModifyingSensitiveFields() {
      // Lors de la CREATION (resource == null), on autorise isPaid: false
      // Lors de la MISE A JOUR, l'utilisateur ne peut pas changer isPaid
      return resource == null 
        ? (request.resource.data.isPaid == false && !('isAdmin' in request.resource.data))
        : ((!('isPaid' in request.resource.data) || request.resource.data.isPaid == resource.data.isPaid)
           && (!('isAdmin' in request.resource.data)));
    }

    // --- COLLECTION SYSTEME ---
    
    match /systems/admins/users/{userId} {
      // SEULS les admins peuvent lire la liste des admins
      allow read: if isAdmin(); 
      // Seuls les admins peuvent ajouter des admins
      allow write: if isAdmin();
    }
    
    // Bloquer l'accès à la racine /systems/admins
    match /systems/admins {
      allow read: if false; 
    }

    // --- PROFILS & SOUS-COLLECTIONS ---

    // Astuce : Utiliser un wildcard pour regrouper tout ce qui est sous l'utilisateur
    // Cela couvre: employees, notes, reports, trainings, readings, okrs, settings
    match /artifacts/{appId}/users/{userId}/{collectionName}/{docId} {
       
       // S'applique à toutes les sous-collections sauf 'profile' si on le traite à part
       allow read: if isOwner(userId) || isAdmin();
       allow write: if isOwner(userId);
    }

    // Traitement spécifique pour le PROFIL (à cause des champs sensibles)
    match /artifacts/{appId}/users/{userId}/profile/{document} {
      allow read: if isOwner(userId) || isAdmin();
      
      // SCENARIO D'ECRITURE SECURISE :
      // 1. Si c'est un Admin : Autorisé tout le temps
      // 2. Si c'est le User : Autorisé SEULEMENT s'il ne touche pas aux champs interdits
      allow write: if isAdmin() || (isOwner(userId) && isNotModifyingSensitiveFields());
    }

    // CollectionGroup (nécessaire pour vos requêtes admin globales)
    match /{path=**}/profile/{document} {
      allow read: if isAdmin();
    }
  }
}
